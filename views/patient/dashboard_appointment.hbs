                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Appointments</a>
                        </li>
                    </ul>
                </div>
                
            </div>

            


            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Recent Appointments</h3>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
