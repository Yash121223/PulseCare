<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/images/logo.png" rel="icon">
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/index.css">

    <title>Treatment</title>
</head>

<body>


    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">PulseCare</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/user/dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Home</span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/diagnosis">
                    <i class='fa fa-heartbeat'></i>
                    <span class="text">Diagnosis </span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/request">
                    <i class='fa fa-medkit'></i>
                    <span class="text">Make Appointments</span>
                </a>
            </li>
            <li class="active">
                <a href="/user/dashboard/treatment">
                    <i class='fa fa-plus-square'></i>
                    <span class="text">Treatment</span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/appointment">
                    <i class='fa fa-user-md'></i>
                    <span class="text">Apppointment</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
           
            <li>
                <a href="/user/logout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            
            <form action="#">
                
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            
            <a href="#" class="profile">
                {{user}}
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Dashboard</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Treatment</a>
                        </li>
                    </ul>
                </div>
                
            </div>

            


            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Recent Treatments</h3>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Doctor</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Medicine</th>
                                <th>Report</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#info}}
                            <tr><td>{{Date}}</td>
                            <td>{{Doctor}}</td>
                            <td>{{Category}}</td>
                            <td>{{Description}}</td>
                            <td>{{Medicine}}</td>
                            <td><a href="/files/{{Report}}" download="report.pdf">Report Here</a></td>
                            </tr>
                           
                           {{/info}}
                           
                        </tbody>
                    </table>
                </div>
                
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->


    <script src="/js/index.js"></script>
</body>

</html>