<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/appointment.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>Appointments</title>
</head>

<body>
<input type="text" value="{{status}}" hidden id="errbox">

    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">PulseCare</span>
        </a>
        <ul class="side-menu top">
            <li >
                <a href="/user/dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Home</span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/diagnosis">
                    <i class='fa fa-heartbeat'></i>
                    <span class="text">Diagnosis </span>
                </a>
            </li>
            <li class="active">
                <a href="/user/dashboard/request">
                    <i class='fa fa-medkit'></i>
                    <span class="text">Make Appointments</span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/treatment">
                    <i class='fa fa-plus-square'></i>
                    <span class="text">Treatment</span>
                </a>
            </li>
            <li>
                <a href="/user/dashboard/appointment">
                    <i class='fa fa-user-md'></i>
                    <span class="text">Apppointment</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
           
            <li>
                <a href="/user/logout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            
            <form action="#">
                
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                {{user}}
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Dashboard</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Appointments</a>
                        </li>
                    </ul>
                </div>
                
            </div>

            


            
                <div class="booking-form">
                    <h2>Appointment Request Form</h2>
                    <form action="/user/appointment/requested" method="post">
                        <label for="name">Name:</label>
                        <input type="text" name="name" id="name" required>
        
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" required>
        
                        <label for="departure-date">Date:</label>
                        <input type="date" name="Date" id="date" required>
        
                        <label for="destination">Doctor:</label>
                        <input type="text" name="Doctor" id="doctor" required>
        
        
                        <label for="category">Category:</label>
                        <input type="text" name="Category" id="category" required>
        
        
                        <button type="submit">Request Now</button>
                    </form>
                </div>
            

        </main>
       
    </section>
    


    
</body>
 <script>
    const errbox = document.querySelector('#errbox').value;
      if (errbox == "Appointment request sent!!") {
        Swal.fire({
          title: 'Notification',
          text: errbox,
          icon: "success"
        })
      }
     
</script>
 <script src="/js/index.js"></script>

</html>